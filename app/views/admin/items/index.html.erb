<div class="container my-5 px-5 px-sm-0">
  <div class="row">
    <div class="col">
      <div class="row px-5 py-4">
        <h4 class="col-6">商品一覧</h4>
        <div class="col-6 text-right">
          <%= link_to new_admin_item_path do %>
            <img src="/assets/plusIcon.png" alt="">
          <% end %>
        </div>
      </div>

      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id) %></td>
              <td><%= item.price.to_s(:delimited)%></td>
              <td>
                <% if item.is_active == true %>
                  <P class="text-success font-weight-bold">販売中</p>
                <% else %>
                  <P class="text-muted">販売停止中</p>
                <% end %>
              </td>
            </td>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>