<div class="container py-5 mx-auto">
  <div class="row">
    <h4 class="ml-3">商品詳細</h4>
  </div>

  <div class="row">
    <div class="col-md-3 mt-3 text-center text-md-left">
      <%= image_tag @item.get_image(200, 200) %>
    </div>
      <table class="table table-bordered mt-3 mt-md-0 col-md-8 offset-md-1">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.explanation %></td>
          </tr>
          <tr>
            <td>税込み価格（税抜価格）</htdd>
            <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>) 円</span></td>
          </tr>
        </tbody>
      </table>
    </div>

  <div class="text-center">
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
  </div>
</div>