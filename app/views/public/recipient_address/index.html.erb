<script type="text/javascript" src="//code.jquery.com/jquery-2.1.0.min.js"></script>
<script type="text/javascript" src="//jpostal-1006.appspot.com/jquery.jpostal.js"></script>

<div class="container mt-5 mb-5">
  <div class="row recipient-new">
    <div class="col-sm-10 px-sm-0 offset-sm-1">
      <h2>配送先登録/一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <%= form_with model: @recipient_address, local: true do |f| %>
      <table>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
          <td><%= f.text_field :recipient_postal_code, placeholder:"0000000", id: "customer_postal_code" %></td>
        </div>
        </tr>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"住所" %></th>
          <td><%= f.text_field :recipient_address, placeholder:"住所を入力してください", :size => "50", id: "customer_address" %></td>
        </div>
        </tr>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"宛名" %></th>
          <td><%= f.text_field :recipient_name, placeholder:"名前を入力してください"%></td>
        　<td><%= f.submit "新規登録", class:"btn btn-success" %></td>
        </div>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row recipient-lists">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <table class="table table-bordered">
        <thead class="table-active">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛先</th></th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
        <% @recipient_addresses.each do |recipient_address| %>
          <tr>
            <td><%= recipient_address.recipient_postal_code %></td>
            <td><%= recipient_address.recipient_address %></td>
            <td><%= recipient_address.recipient_name %></td>
            <td><%= link_to "編集する", edit_recipient_address_path(recipient_address), class:"btn btn-success" %> <%= link_to "削除する", recipient_address, method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>